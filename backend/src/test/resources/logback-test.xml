<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- âœ… Solo errores y warnings importantes -->
    <root level="WARN">
        <appender-ref ref="CONSOLE"/>
    </root>

    <!-- ðŸ”‡ SILENCIAR logs innecesarios -->
    <logger name="org.springframework" level="ERROR"/>
    <logger name="org.springframework.boot" level="ERROR"/>
    <logger name="org.springframework.security" level="ERROR"/>
    <logger name="org.springframework.test" level="ERROR"/>
    <logger name="org.mockito" level="ERROR"/>
    <logger name="io.jsonwebtoken" level="ERROR"/>
    <logger name="net.bytebuddy" level="OFF"/>
    <logger name="org.hibernate" level="ERROR"/>
    <logger name="com.zaxxer.hikari" level="ERROR"/>

    <!-- âœ… LOGS propios que sÃ­ se muestren -->
    <logger name="com.c24_39_t_webapp" level="INFO"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
</configuration>